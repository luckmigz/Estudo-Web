<script>
function ConverterK() {
  var elemente = document.getElementById("valor");
  var valor = elemente.value;
  var valornum = parseFloat(valor);
  var kelvin = valornum + 273.15;
  var kelvinFixed = kelvin.toFixed(2);
  var elementValorConvertido = document.getElementById("valorConvertido");
  var valorConvertido = "Valor em Kelvin = " + kelvinFixed + " K";
  elementValorConvertido.innerHTML = valorConvertido;
}
function ConverterF() {
  var elemente = document.getElementById("valor");
  var valor = elemente.value;
  var valornum = parseFloat(valor);
  var fahrenheit = valornum * (9 / 5) + 32;
  var elementValorConvertido = document.getElementById("valorConvertido");
  var fahrenheitFixed = fahrenheit.toFixed(2);
  var valorConvertido = "Valor em Fahrenheit = " + fahrenheitFixed + " ºF";
  elementValorConvertido.innerHTML = valorConvertido;
}
function ConverterCF() {
  var elemente = document.getElementById("valor");
  var valor = elemente.value;
  var valornum = parseFloat(valor);
  var celcius = ((valornum - 32) * 5) / 9;
  var elementValorConvertido = document.getElementById("valorConvertido");
  var celciusFixed = celcius.toFixed(2);
  var valorConvertido = "Valor em Celcius = " + celciusFixed + " ºC";
  elementValorConvertido.innerHTML = valorConvertido;
}
function ConverterKC() {
  var elemente = document.getElementById("valor");
  var valor = elemente.value;
  var valornum = parseFloat(valor);
  var celcius = valornum - 273.15;
  var elementValorConvertido = document.getElementById("valorConvertido");
  var celciusFixed = celcius.toFixed(2);
  var valorConvertido = "Valor em Celcius = " + celciusFixed + " ºC";
  elementValorConvertido.innerHTML = valorConvertido;
}

</script>
<html>
<div class="container">
  <a href="https://c.tenor.com/Cy4z6MdBBKAAAAAC/term%C3%B4metro-t%C3%A1esquentando.gif">
    <h1 class="page-title">Conversor de Temperaturas</h1>
  </a>
  <img src="https://www.alura.com.br/assets/img/imersoes/dev-2021/logo-imersao-conversor-de-moedas.svg" class="page-logo" alt=""><br><br>
  <label for="moeda">Insira o valor</label><br>
  <input type="number" id="valor" size="2" /><br>
  <button type="submit" onclick="ConverterK()">Converter de Celcius para Kelvin</button><br>
  <button type="submit" onclick="ConverterF()">Converter de Celcius para Fahrenheit</button><br>
  <button type="submit" onclick="ConverterCF()">Converter de Fahrenheit para Celcius</button><br>
  <button type="submit" onclick="ConverterKC()">Converter de Kelvin para Celcius</button><br>
  <h2 id="valorConvertido"></h2>
</div>
